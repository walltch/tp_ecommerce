{% extends 'base.html.twig' %}

{% block title %}{{'user'|trans}}{% endblock %}

{% block body %}
    <h1>{{'user'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{{'login.password'|trans}}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{{'name'|trans}}</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>{{'first-name'|trans}}</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">{{'back-to-list'|trans}}</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">{{'edit'|trans}}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
