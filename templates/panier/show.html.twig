{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>DateAchat</th>
                <td>{{ panier.dateAchat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ panier.etat ? 'Yes' : 'No' }}</td>
            </tr>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <tr>
                    <th>Nom client</th>
                    <td>{{ panier.getUser.nom }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_panier_index') }}">back to list</a>

    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">edit</a>

    {{ include('panier/_delete_form.html.twig') }}
{% endblock %}
