{% extends 'base.html.twig' %}

{% block title %}{{'cart-index'|trans}}{% endblock %}

{% block body %}
    <h1 class="container">{{'cart-index'|trans}}</h1>
    <table class="table container">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Achat</th>
                <th>Etat</th>
                <th>Actions</th>  
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.id }}</td>
                <td>{{ panier.dateAchat ? panier.dateAchat|date('Y-m-d') : '' }}</td>
                <td>{{ panier.etat ? 'Payé' : 'Non-Payé' }}</td>
                <td>
                    <a href="{{ path('app_contenu_panier_index', {'id': panier.id}) }}">{{'show'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
